@model web1.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 class="text-center">Jaewon Jeong</h1>
    <img src="~/Content/img/pic1.jpg" alt="Jaewon Jeong" class="mx-auto d-block rounded img-fluid"/>
</div>

<div class="row">
    <div class="col text-center">
        <h2>Number of Phones</h2>
        <h3>@Model.PhoneCount</h3>
    </div>
    <div class="col text-center">
        <h2>Number of Users</h2>
        <h3>@Model.UserCount</h3>
    </div>
    <div class="col text-center">
        <h2>Last Access Date</h2>
        <h3>@Model.LastAccessDate.ToShortDateString()</h3>
    </div>
</div>